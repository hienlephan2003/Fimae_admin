    <!-- Custom font -->
    <style name="chat_name_appbar_title">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="chat_status_appbar_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary_2</item>
    </style>
    <style name="Widget.Fimae.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="non_clickable_chip">
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/text_tertiary</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="CustomChoiceChipStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <!-- Customize the background color (inside color) -->
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textAppearance">@style/AppTheme.ChipText</item>
        <!-- Customize the stroke color (border color) -->
        <item name="chipStrokeColor">@color/chip_border_color</item>
        <item name="chipStrokeWidth">2dp</item>
    </style>

    <style name="CustomInputChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/input_chip_background</item>
        <item name="android:textColor">@color/primary_1</item>
        <item name="closeIconTint">@color/text_secondary</item>
    </style>

    <style name="AppTheme.ChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Fimae.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@drawable/bottomsheet_background</item>
    </style>


    <style name="btn_can_click" parent="android:Widget">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary_2</item>
    </style>

    <style name="btn_cant_click" parent="android:Widget">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/text_tertiary</item>
    </style>

    <style name="btn_is_chosen" parent="android:Widget">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/background_button_dark_2</item>
    </style>

    <style name="btn_is_not_chosen" parent="android:Widget">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:backgroundTint">@color/background_button_2</item>
    </style>
</resources>