<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomsheet_background"
    tools:context=".bottomdialogs.PostModeFragment">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="54dp"
        android:layout_height="5dp"
        android:src="@drawable/header_diolog"
        android:layout_gravity="center|top"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bold_16"
        android:textColor="@color/text_primary"
        android:text="Ai có thể xem bài đăng này?"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"

        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/public_layout"
        android:layout_width="343dp"
        android:layout_gravity="center"
        android:background="@drawable/diolog_item_background"
        android:layout_height="76dp"
        android:layout_marginBottom="15dp"
        >
        <ImageView
            android:id="@+id/icon_public"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/ic_world"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/text_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bold_16"
            android:textColor="@color/text_primary"
            android:text="Công khai"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/icon_public"
            android:paddingTop="15dp"
            android:paddingBottom="6dp"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/text_public_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/regular_12"
            android:text="Mọi người có thể nhìn thấy"
            android:textColor="@color/text_primary"
            app:layout_constraintLeft_toLeftOf="@id/text_public"
            app:layout_constraintTop_toBottomOf="@id/text_public"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/ic_check_public"
            android:layout_width="25dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:src="@drawable/ic_check"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/friend_layout"
        android:layout_width="343dp"
        android:layout_gravity="center"
        android:background="@drawable/diolog_item_background"
        android:layout_height="98dp"
        android:layout_marginBottom="15dp"
        >
        <ImageView
            android:id="@+id/icon_friend"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/ic_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/text_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bold_16"
            android:textColor="@color/text_primary"
            android:text="Bạn bè"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/icon_friend"
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/text_friend_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/regular_12"
            android:paddingBottom="5dp"
            android:text="Những người đã theo dõi nhau trên"
            android:textColor="@color/text_primary"
            app:layout_constraintLeft_toLeftOf="@id/text_friend"
            app:layout_constraintTop_toBottomOf="@id/text_friend"
            />
        <TextView
            android:id="@+id/text_friend_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/regular_12"
            android:text="Litmatch có thể thấy"
            android:textColor="@color/text_primary"
            app:layout_constraintLeft_toLeftOf="@id/text_friend_description"
            app:layout_constraintTop_toBottomOf="@id/text_friend_description"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/ic_check_friend"
            android:layout_width="25dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:src="@drawable/ic_check"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/private_layout"
        android:layout_width="343dp"
        android:layout_gravity="center"
        android:background="@drawable/diolog_item_background"
        android:layout_height="76dp"
        android:layout_marginBottom="15dp"
        >
        <ImageView
            android:id="@+id/icon_private"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/ic_world"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/text_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bold_16"
            android:textColor="@color/text_primary"
            android:text="Riêng tư"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/icon_private"
            android:paddingTop="15dp"
            android:paddingBottom="6dp"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/text_private_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/regular_12"
            android:text="Chỉ mình tôi"
            android:textColor="@color/text_primary"
            app:layout_constraintLeft_toLeftOf="@id/text_private"
            app:layout_constraintTop_toBottomOf="@id/text_private"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/ic_check_private"
            android:layout_width="25dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:src="@drawable/ic_check"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>